@*
    File: Pages/Shared/_SecurityLayout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Security Logs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-right text-white" id="sidebar-wrapper" style="min-width: 220px;">
            <div class="sidebar-heading fw-bold fs-5 py-3 text-center border-bottom">Security Panel</div>
            <div class="list-group list-group-flush">
                <a asp-page="/Security/SecurityLog" class="list-group-item list-group-item-action bg-dark text-white">Security Logs</a>
                <a asp-page="/Security/CreateSecurityLog" class="list-group-item list-group-item-action bg-dark text-white">Create Log</a>
                <a asp-page="/Security/Events" class="list-group-item list-group-item-action bg-dark text-white">Events</a>
                <a asp-page="/Index" class="list-group-item list-group-item-action bg-dark text-white">Back to Home</a>
            </div>
        </div>

        <!-- Main Content -->
        <div id="page-content-wrapper" class="flex-grow-1 p-4">
            <header class="mb-3 border-bottom pb-2">
                <h3 class="text-primary">@ViewData["Title"]</h3>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top pt-2 text-muted small mt-4">
                &copy; 2025 - Security Management
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

