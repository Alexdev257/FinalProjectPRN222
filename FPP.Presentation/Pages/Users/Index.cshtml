@page
@model FPP.Presentation.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_Layout";
}

<h1 class="page-title">Manage Users</h1>

<div class="text-center mt-3 mb-4">
    <a asp-page="/Users/Create" class="btn btn-success btn-lg">
        + Create New User
    </a>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-dark table-hover mt-4">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>CreatedAt</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.CreatedAt.ToString("g")</td>
                <td class="text-center">
                    <a asp-page="/Users/Edit" asp-route-id="@user.UserId"
                       class="btn btn-sm btn-primary me-2">
                        ✏️ Edit
                    </a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.UserId"
                          style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            🗑️ Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background: #000;
        color: white;
        font-family: 'Rajdhani', sans-serif;
    }

    .page-title {
        font-family: 'Orbitron', sans-serif;
        font-size: 3rem;
        color: #ff6b35;
        text-shadow: 0 0 20px rgba(255,107,53,0.6);
        margin-top: 40px;
        text-align: center;
    }

    .btn {
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-primary {
        background: #4a90e2;
        color: white;
    }

    .btn-danger {
        background: #ff3232;
        color: white;
    }

    .btn-success {
        background: #00b050;
        color: white;
    }

    .btn-primary:hover {
        background: #1e70d1;
    }

    .btn-danger:hover {
        background: #ff5050;
    }

    .btn-success:hover {
        background: #00d060;
    }

    .table {
        width: 90%;
        margin: 0 auto;
        border-collapse: collapse;
        background: rgba(10, 10, 10, 0.6);
        border: 1px solid rgba(255,107,53,0.3);
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 18px;
        border-bottom: 1px solid rgba(255,107,53,0.2);
    }

    th {
        background: rgba(255,107,53,0.2);
        color: #ff9a70;
        text-transform: uppercase;
    }

    .alert {
        margin: 20px auto;
        width: 90%;
        padding: 10px;
        border-radius: 6px;
        text-align: center;
    }

    .alert-success {
        background: rgba(0,255,100,0.1);
        border: 1px solid #00ff64;
        color: #00ff64;
    }

    .alert-danger {
        background: rgba(255,50,50,0.1);
        border: 1px solid #ff3232;
        color: #ff3232;
    }
</style>
